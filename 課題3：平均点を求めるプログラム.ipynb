   ],
   "source": [
    "i = 0\n",
    "total_score = 0\n",
    "while True:\n",
    "    score = input(\"点数を入力してください：\")\n",
    "    score = int(score)\n",
    "    if score == -1:\n",
    "        break\n",
    "    i += 1\n",
    "    total_score += score\n",
    "    average = round(total_score / i, 1)\n",
    "print(f\"{i}人のテストの平均点は{average}点です\")\n",
    "\n"
   ]
  },
